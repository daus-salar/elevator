ccd
initial conditions:
{
	wait 1 [s]
}

test step 1:
{
	// Press button
	set CTRL_DO_FLOOR_LEVEL_0_BUTTON to ON
	after 500 [ms]:
		set CTRL_DO_FLOOR_LEVEL_0_BUTTON to OFF

		// Check button lights
	within 0 [ms] .. 100 [ms]:
		expect CTRL_DI_FLOOR_LEVEL_0_LIGHT => ON

	wait 2 [s]
}

